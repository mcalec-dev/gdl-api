{
  "productName": "gdl-api-client",
  "appId": "dev.mcalec.gdl-api-client",
  "directories": {
    "output": "dist"
  },
  "files": [
    "electron.js"
  ],
  "win": {
    "target": [
      { "target": "msi", "arch": ["x64"] },
      { "target": "nsis", "arch": ["x64"] },
      { "target": "portable", "arch": ["x64"] },
      { "target": "zip", "arch": ["x64"] },
      { "target": "7z", "arch": ["x64"] }
    ],
    "artifactName": "${productName}_${os}-${arch}_${version}.${ext}",
    "icon": "icon.ico"
  },
  "linux": {
    "target": [
      { "target": "deb", "arch": ["x64"] },
      { "target": "tar.gz", "arch": ["x64"] },
      { "target": "zip", "arch": ["x64"] },
      { "target": "7z", "arch": ["x64"] }
    ],
    "artifactName": "${productName}_${os}-${arch}_${version}.${ext}",
    "icon": "icon.ico"
  },
  "extraMetadata": {
    "main": "electron.js"
  }
}