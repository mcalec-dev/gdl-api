{
  "productName": "gdl-api-client",
  "appId": "dev.mcalec.gdl-api-client",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "app.js",
    "package.json",
    "assets/**/*",
    "node_modules/**/*"
  ],
  "extraMetadata": {
    "main": "app.js"
  },
  "asar": true,
  "win": {
    "target": [
      { "target": "msi", "arch": ["x64"] },
      { "target": "nsis", "arch": ["x64"] },
      { "target": "portable", "arch": ["x64"] },
      { "target": "zip", "arch": ["x64"] },
      { "target": "7z", "arch": ["x64"] }
    ],
    "artifactName": "${productName}_${os}-${arch}_${version}.${ext}",
    "icon": "icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  },
  "linux": {
    "target": [
      { "target": "AppImage", "arch": ["x64"] },
      { "target": "deb", "arch": ["x64"] },
      { "target": "tar.gz", "arch": ["x64"] },
      { "target": "zip", "arch": ["x64"] },
      { "target": "7z", "arch": ["x64"] }
    ],
    "category": "Utility",
    "artifactName": "${productName}_${os}-${arch}_${version}.${ext}",
    "icon": "icon.ico"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "artifactName": "${productName}_${os}-${arch}_${version}.${ext}",
    "icon": "icon.ico"
  }
}