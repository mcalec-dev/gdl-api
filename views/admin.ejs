<!doctype html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="relative flex min-h-screen items-center justify-center bg-black">
    <%- include('partials/navbar') %>
    <%- include('partials/settings') %>
    <div id="container" class="z-10 mx-1 mb-[6vh] mt-[12vh] rounded-xl border border-white/20 p-4 shadow-2xl backdrop-blur-md sm:mx-0 sm:w-full sm:p-8 md:w-auto md:max-w-[65%] md:p-8">
      <h1 id="title" class="mb-6 text-center text-3xl font-light capitalize text-white sm:mb-8">
        <%= currentPage %>
      </h1>
      <div id="loading" class="text-center text-gray-300">
        Loading...
      </div>
      <div id="error" class="error-message mb-4 text-center text-red-500" style="display: none"></div>
      <div id="dashboard-content" class="space-y-4 text-white">
        <div id="overview" class="mb-8">
          <h2 class="mb-2 text-2xl font-semibold">
            Overview & Analytics
          </h2>
          <ul class="ml-6 list-disc">
            <li>
              Server Uptime:
              <span id="stat-uptime"></span>
            </li>
            <li>
              Logged In Users:
              <span id="stat-loggedin"></span>
            </li>
            <li>
              Top Tags:
              <span id="stat-toptags"></span>
            </li>
            <li>
              Storage Usage:
              <span id="stat-storage"></span>
            </li>
            <li>
              Flagged Items:
              <span id="stat-flags"></span>
            </li>
          </ul>
        </div>
        <div id="user-management" class="mb-8">
          <h2 class="mb-2 text-2xl font-semibold">
            User Management
          </h2>
          <div id="user-tools"></div>
        </div>
        <div id="tag-management" class="mb-8">
          <h2 class="mb-2 text-2xl font-semibold">
            Tag Management
          </h2>
          <div id="tag-tools"></div>
        </div>
        <div id="dmca-takedown" class="mb-8">
          <h2 class="mb-2 text-2xl font-semibold">
            DMCA / Takedown Requests
          </h2>
          <div id="dmca-tools"></div>
        </div>
        <div id="file-tools" class="mb-8">
          <h2 class="mb-2 text-2xl font-semibold">
            File Tools
          </h2>
          <div id="file-tools-content"></div>
        </div>
        <div id="cache-tools" class="mb-8">
          <h2 class="mb-2 text-2xl font-semibold">
            Cache Tools
          </h2>
          <div id="cache-tools-content"></div>
        </div>
        <div id="announcements" class="sm:w-full md:w-auto md:max-w-md">
          <h2 class="mb-2 text-2xl font-semibold">
            Announcements
          </h2>
          <form id="announcement-form" class="flex w-full flex-col items-center gap-3">
            <input type="text" id="announcement-title-input" class="w-full rounded border border-white/20 bg-[#1f1f1f] px-3 py-2 text-base text-white backdrop-blur-lg" placeholder="Enter title" />
            <textarea id="announcement-message-input" class="w-full rounded border border-white/20 bg-[#1f1f1f] px-3 py-2 text-base text-white backdrop-blur-lg" placeholder="Enter message" rows="3"></textarea>
            <div class="flex w-full flex-row gap-3">
              <select id="announcement-severity-input" class="flex-1 rounded border border-white/20 bg-[#1f1f1f] px-3 py-2 text-white">
                <option value="info">
                  Info
                </option>
                <option value="warning">
                  Warning
                </option>
                <option value="error">
                  Error
                </option>
              </select>
              <button type="submit" class="flex select-none rounded bg-blue-600 px-3 py-2 text-center text-white">
                Create
              </button>
            </div>
          </form>
          <ul id="announcement-list" class="list-disc space-y-2"></ul>
        </div>
      </div>
    </div>
    <script type="module" src="/js/admin.js"></script>
    <%- include('partials/bg') %>
  </body>
</html>
