<!doctype html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="relative flex min-h-screen items-center justify-center bg-black">
    <%- include('partials/navbar') %>
    <%- include('partials/settings') %>
    <div id="container" class="z-10 mx-auto mb-[6vh] mt-[12vh] w-full rounded-xl border border-white/20 p-4 shadow-2xl backdrop-blur-md sm:p-8 md:w-auto md:min-w-[25%] md:max-w-[65%]">
      <h1 id="title" class="mb-6 text-center text-3xl font-light capitalize text-white sm:mb-8">
        <%= currentPage %>
      </h1>
      <div id="loading" class="mb-4 text-center text-gray-300">
        Loading statistics...
      </div>
      <div id="error" class="error-message mb-4 text-center text-red-500" style="display: none"></div>
      <div id="stats-content" style="display: none">
        <div class="mb-4">
          <h2 class="mb-3 text-lg font-semibold text-white">
            Totals & File Sizes
          </h2>
          <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3">
            <div class="flex flex-col items-center rounded-lg border border-[#232329] bg-[#18181b] p-4 shadow">
              <span class="mb-1 text-xs font-semibold text-gray-300">
                Total Directories
              </span>
              <span id="total-directories" class="font-mono text-xl text-white"></span>
            </div>
            <div class="flex flex-col items-center rounded-lg border border-[#232329] bg-[#18181b] p-4 shadow">
              <span class="mb-1 text-xs font-semibold text-gray-300">
                Total Files
              </span>
              <span id="total-files" class="font-mono text-xl text-white"></span>
            </div>
            <div class="flex flex-col items-center rounded-lg border border-[#232329] bg-[#18181b] p-4 shadow">
              <span class="mb-1 text-xs font-semibold text-gray-300">
                Total Size
              </span>
              <span id="total-size" class="font-mono text-xl text-white"></span>
            </div>
            <div class="flex flex-col items-center rounded-lg border border-[#232329] bg-[#18181b] p-4 shadow">
              <span class="mb-1 text-xs font-semibold text-gray-300">
                Average File Size
              </span>
              <span id="average-file-size" class="font-mono text-xl text-white"></span>
            </div>
            <div class="flex flex-col items-center rounded-lg border border-[#232329] bg-[#18181b] p-4 shadow">
              <span class="mb-1 text-xs font-semibold text-gray-300">
                Largest File Size
              </span>
              <span id="largest-file-size" class="font-mono text-xl text-white"></span>
            </div>
            <div class="flex flex-col items-center rounded-lg border border-[#232329] bg-[#18181b] p-4 shadow">
              <span class="mb-1 text-xs font-semibold text-gray-300">
                Smallest File Size
              </span>
              <span id="smallest-file-size" class="font-mono text-xl text-white"></span>
            </div>
          </div>
        </div>
        <div class="mb-8">
          <div class="overflow-x-auto rounded-xl border border-[#232329] bg-[#18181b] p-4 shadow">
            <h2 class="mb-3 text-lg font-semibold text-white">
              File Types
            </h2>
            <table class="w-full overflow-hidden rounded-xl border border-[#232329] bg-[#18181b] text-left text-sm text-gray-300 shadow-lg">
              <thead class="border-[#232329] bg-[#131316] text-gray-200">
                <tr>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Type
                  </th>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Count
                  </th>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Total Size
                  </th>
                </tr>
              </thead>
              <tbody id="file-types"></tbody>
            </table>
          </div>
        </div>
        <div class="mb-8 rounded-xl border border-[#232329] bg-[#18181b] p-4 shadow">
          <h2 class="mb-2 text-lg font-semibold text-white">
            Collection Details
          </h2>
          <div class="overflow-x-auto">
            <table class="w-full overflow-hidden rounded-xl border border-[#232329] bg-[#18181b] text-left text-sm text-gray-300 shadow-lg">
              <thead class="border-[#232329] bg-[#131316] text-gray-200">
                <tr>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Name
                  </th>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Files
                  </th>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Size
                  </th>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Last Modified
                  </th>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Largest File
                  </th>
                  <th class="border border-[#232329] px-2 py-2 font-semibold">
                    Smallest File
                  </th>
                </tr>
              </thead>
              <tbody id="collection-details"></tbody>
            </table>
          </div>
        </div>
        <div class="mt-8 grid grid-cols-1 gap-6 md:grid-cols-2">
          <div class="flex flex-col rounded-lg border border-[#232329] bg-[#18181b] p-4 text-gray-200 shadow">
            <h2 class="mb-2 text-lg font-semibold text-white">
              System
            </h2>
            <div id="directory-list" class="flex flex-col gap-2"></div>
          </div>
          <div class="flex flex-col rounded-lg border border-[#232329] bg-[#18181b] p-4 text-gray-200 shadow">
            <h2 class="mb-2 text-lg font-semibold text-white">
              Memory Usage
            </h2>
            <div id="memory-stats" class="flex flex-col gap-1"></div>
          </div>
        </div>
      </div>
      <div id="refresh-time" class="mt-4 w-full text-center text-xs text-gray-400"></div>
    </div>
    <script type="module" src="/js/min/stats.min.js"></script>
    <%- include('partials/bg') %>
  </body>
</html>
