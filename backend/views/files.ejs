<!doctype html>
<html lang="en">
  <%- include('partials/head') %>
  <body class="relative flex min-h-screen items-center justify-center bg-black">
    <%- include('partials/navbar') %>
    <%- include('partials/settings') %>
    <%- include('partials/viewer') %>
    <%- include('partials/context') %>
    <div id="container" class="z-10 mx-auto mb-[6vh] mt-[12vh] rounded-xl border border-white/20 p-4 shadow-2xl backdrop-blur-md sm:w-full sm:p-8 md:w-full md:p-8 lg:max-w-[65%]">
      <h1 id="title" class="mb-6 text-center text-3xl font-light capitalize text-white sm:mb-8">
        <%= currentPage %>
      </h1>
      <div id="file-browser" class="file-browser w-full">
        <div id="sort-toolbar" class="invisible mb-4 bg-black/80 flex flex-wrap sm:flex-row-2 gap-3 rounded-xl border border-white/20 p-3"></div>
        <div id="file-list" class="masonry-grid">
          <div class="loading fixed left-1/2 top-1/2 min-w-[180px] max-w-[320px] p-4 bg-black/80 select-none rounded-xl text-white border border-white/20 text-center transform -translate-x-1/2 -translate-y-1/2 z-50 cursor-not-allowed">
            Loading...
          </div>
        </div>
      </div>
    </div>
    <div id="pagination-controls" class="fixed bottom-4 z-20 flex flex-row h-auto w-auto items-center justify-center gap-3 rounded-xl border border-white/20 px-5 py-4 shadow-2xl backdrop-blur-md sm:w-full md:max-w-fit bg-black/80" hidden>
      <button id="pager-prev" class="flex items-center justify-center rounded border border-white/20 px-3 py-2 font-semibold text-white fill-white stroke-white shadow-2xl backdrop-blur-md transition"></button>
      <span id="pager-current" class="flex pointer-events-none text-white select-none">Page 0</span>
      <button id="pager-next" class="button flex items-center justify-center rounded border border-white/20 px-3 py-2 font-semibold text-white fill-white stroke-white shadow-2xl backdrop-blur-md transition"></button>
    </div>
    <script type="module" src="/js/min/files.min.js"></script>
    <%- include('partials/bg') %>
  </body>
</html>
